<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/imgSlide"
    android:background="@drawable/layout_card" >

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_for_slide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_star"
        app:layout_constraintBottom_toBottomOf="@+id/text_star"
        app:layout_constraintEnd_toStartOf="@+id/text_star"
        app:layout_constraintTop_toTopOf="@+id/text_star" />

    <TextView
        android:id="@+id/text_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:shadowColor="#000"
        android:shadowDx="3"
        android:shadowDy="5"
        android:shadowRadius="4"
        android:text="5.6"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/type_filem" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_favorite_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_filem"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Luca"
        android:textColor="@color/white"
        android:layout_marginEnd="25dp"
        android:textSize="17dp"
        android:textStyle="bold"
        android:shadowColor = "#000"
        android:shadowDx = "-5 "
        android:shadowDy = "5"
        android:shadowRadius = "12"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintBottom_toTopOf="@+id/type_filem"
        app:layout_constraintEnd_toEndOf="@+id/type_filem"
        app:layout_constraintStart_toStartOf="@+id/type_filem" />

    <TextView
        android:id="@+id/type_filem"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="35dp"
        android:paddingStart="3dp"
        android:shadowColor="#000"
        android:shadowDx="-3"
        android:shadowDy="5"
        android:shadowRadius="4"
        android:text="type fff hhh jjy f ee "
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>